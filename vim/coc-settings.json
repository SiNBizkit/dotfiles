{
  "diagnostic.messageTarget": "float",
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.hoverTarget": "float",

  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".clangd", "compile_commands.json", ".vim/", ".git/" ],
      "args": ["--background-index", "-j=2", "--completion-style=detailed"]
    }
  }

}
